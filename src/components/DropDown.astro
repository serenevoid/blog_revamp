<div class="justify-center relative">
  <button type="button" class="space-y-1 rounded-md border border-zinc-400 dark:border-zinc-700 p-2 text-sm font-medium shadow-sm hover:bg-orange-200 dark:hover:bg-zinc-800 outline-none transition-all" id="menu-button" aria-expanded="true" aria-haspopup="true" onClick="toggleMenu()">
    <div class="w-4 h-0.5 bg-zinc-900 dark:bg-zinc-300"></div>
    <div class="w-4 h-0.5 bg-zinc-900 dark:bg-zinc-300"></div>
    <div class="w-4 h-0.5 bg-zinc-900 dark:bg-zinc-300"></div>
  </button>
  <div id="dropdown-menu" class="absolute right-0 z-10 mt-2 w-40 origin-top-right rounded-md border border-zinc-400 dark:border-zinc-700 bg-orange-50 dark:bg-zinc-900 shadow-lg ring-1 ring-black ring-opacity-5 transition-all opacity-0 translate-y-[-10px] duration-100 ease-in-out pointer-events-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
    <div class="flex flex-col justify-center font-mplus" role="none">
      <a href="/projects" class="px-3 py-2 text-sm rounded-t-md hover:bg-orange-200 dark:hover:bg-zinc-700" role="menuitem" tabindex="-1" id="menu-item-0">Projects</a>
      <a href="/blog" class="px-3 py-2 text-sm hover:bg-orange-200 dark:hover:bg-zinc-700" role="menuitem" tabindex="-1" id="menu-item-1">Blog</a>
      <a href="/about" class="px-3 py-2 text-sm rounded-b-md hover:bg-orange-200 dark:hover:bg-zinc-700" role="menuitem" tabindex="-1" id="menu-item-2">About</a>
    </div>
  </div>
</div>
<script in:line>
function toggleMenu() {
  const menu = document.getElementById("dropdown-menu");
  if (menu.classList.contains("opacity-0")) {
    menu.classList.remove("opacity-0");
    menu.classList.remove("translate-y-[-10px]");
    menu.classList.remove("pointer-events-none");
  } else {
    menu.classList.add("opacity-0");
    menu.classList.add("translate-y-[-10px]");
    menu.classList.remove("pointer-events-none");
  }
}
</script>
